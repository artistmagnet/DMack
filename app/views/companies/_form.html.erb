<%= form_for(@company, remote: true, format: :json, html: {class: :company_form}) do |f| %>
  <div id="error_explanation" style="display: none">
    <ul>
      <% if @company.errors.any? %>
        <% @company.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      <% end %>
    </ul>
  </div>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :primary_contact_name %><br>
    <%= f.text_field :primary_contact_name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
