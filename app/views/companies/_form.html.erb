<div class="panel panel-default" >

  <div class="panel-body">
    <h3 class="col-md-offset-4 col-md-8 m-bottom-20">
      <span>Add a new Company</span>
      <a class="pull-right back-link" href="javascript:void(0)" onclick="$('.overlay-3').hide();$('.fade-3').hide();$('#new_company').trigger('reset');">
        <i class="fa fa-undo"></i>
      </a>
    </h3>

  <%= form_for(@company, remote: true, format: :json, html: {class: :'company_form form-horizontal'}) do |f| %>
     <%= render 'layouts/includes/error_explanation', entity: @company, offset: 4, span: 8 %>

    <div class="panel-body">
      <div class="form-group">
        <div class="field">
          <%= f.label :name, {class: "col-sm-4 control-label"} %>
          <div class="col-sm-8">
            <%= f.text_field  :name, {class: 'form-control', placeholder: 'Enter Name'} %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :primary_contact_name, {class: "col-sm-4 control-label"} %>
          <div class="col-sm-8">
            <%= f.text_field  :primary_contact_name, {class: 'form-control', placeholder: 'Enter Primary contact name'} %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :description, {class: "col-sm-4 control-label"} %>
          <div class="col-sm-8">
            <%= f.text_area :description, {class: 'form-control', placeholder: 'Enter Description'} %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :email, {class: "col-sm-4 control-label"} %>
          <div class="col-sm-8">
            <%= f.text_field :email, {class: 'form-control', placeholder: 'Enter Email'} %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :addr_fb, {class: "col-sm-4 control-label"} %>
          <div class="col-sm-8">
            <%= f.text_field :addr_fb, {class: 'form-control', placeholder: 'Enter Facebook page address'} %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :addr_tw, {class: "col-sm-4 control-label"} %>
          <div class="col-sm-8">
            <%= f.text_field :addr_tw, {class: 'form-control', placeholder: 'Enter Twitter page address'} %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :addr_ins, {class: "col-sm-4 control-label"} %>
          <div class="col-sm-8">
            <%= f.text_field :addr_ins, {class: 'form-control', placeholder: 'Enter Instagram page address'} %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :addr_lin, {class: "col-sm-4 control-label"} %>
          <div class="col-sm-8">
            <%= f.text_field :addr_lin, {class: 'form-control', placeholder: 'Enter LinkedIn page address'} %>
          </div>
        </div>
      </div>
      <div class="actions form-group">
        <div class="col-sm-8 pull-right">
          <%= f.button 'Done', {class: "btn btn-primary m-top-m6"} %>
          <%# f.submit %>
        </div>
      </div>

    </div>
  <% end %>
  </div>
</div>
