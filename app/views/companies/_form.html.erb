<div class="panel panel-default" >

  <%= form_for(@company, remote: true, format: :json, html: {class: :'company_form form-horizontal'}) do |f| %>
    <div id="error_explanation" style="display: none">
      <ul>
        <% if @company.errors.any? %>
          <% @company.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        <% end %>
      </ul>
    </div>




    <h3>
      <span>New Company</span>
      <a class="pull-right" href="javascript:void(0)" onclick="$('.overlay-3').hide();$('.fade-3').hide()">
        <i class="fa fa-undo"></i>
      </a>
    </h3>

    <div class="panel-body">
      <div class="form-group">
        <div class="field">
          <%= f.label :name, {class: "col-sm-4 control-label"} %>
          <div class="col-sm-8">
            <%= f.text_field  :name %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :primary_contact_name, {class: "col-sm-4 control-label"} %>
          <div class="col-sm-8">
            <%= f.text_field :primary_contact_name %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :description, {class: "col-sm-4 control-label"} %>
          <div class="col-sm-8">
            <%= f.text_area :description %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :email, {class: "col-sm-4 control-label"} %>
          <div class="col-sm-8">
            <%= f.text_field :email %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :addr_fb, {class: "col-sm-4 control-label"} %>
          <div class="col-sm-8">
            <%= f.text_field :addr_fb %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :addr_tw, {class: "col-sm-4 control-label"} %>
          <div class="col-sm-8">
            <%= f.text_field :addr_tw %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :addr_ins, {class: "col-sm-4 control-label"} %>
          <div class="col-sm-8">
            <%= f.text_field :addr_ins %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :addr_lin, {class: "col-sm-4 control-label"} %>
          <div class="col-sm-8">
            <%= f.text_field :addr_lin %>
          </div>
        </div>
      </div>
      <div class="actions form-group">
        <div class="col-sm-8 pull-right">
          <%= f.button 'Done', {class: "btn btn-primary m-top-m6"} %>
          <%# f.submit %>
        </div>
      </div>

    </div>
  <% end %>
</div>
