

<div class="panel panel-default" >

  <div class="panel-body">

    <div class="form-group">
      <h3 class="col-md-offset-2 col-md-10 m-bottom-20">
        <span>Invite a Director to Artist Magnet</span>
        <a class="pull-right" href="javascript:void(0)" onclick="$('.overlay-2').hide();$('.fade-2').hide()">
          <i class="fa fa-undo"></i>
        </a>
      </h3>
    </div>

    <%= form_for([@production, @invitation], remote: true, format: 'json', html: {class: 'form-horizontal'}) do |f| %>
      <%= render 'layouts/includes/error_explanation', entity: @invitation, offset: 2, span: 10 %>

      <div class="form-group">
        <div class="field">
          <%= f.label :first_name, {class: "col-sm-2 control-label"} %>
          <div class="col-sm-10">
            <%= f.text_field :first_name, {class: 'form-control', placeholder: 'Enter First Name'} %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :last_name, {class: "col-sm-2 control-label"} %>
          <div class="col-sm-10">
            <%= f.text_field :last_name, {class: 'form-control', placeholder: 'Enter Last Name'} %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :email, {class: "col-sm-2 control-label"} %>
          <div class="col-sm-10">
            <%= f.text_field :email, {class: 'form-control', placeholder: 'Enter Email'} %>
          </div>
        </div>
      </div>
      <!--<div class="form-group">-->
        <!--<div class="field">-->
          <!--<%# f.label :text, {class: "col-sm-2 control-label"} %>-->
          <!--<div class="col-sm-10">-->
            <!--<%# f.text_area :text %>-->
          <!--</div>-->
      <!--</div>-->
      <div class="actions form-group">
        <div class="actions">
          <span class="col-sm-2"></span>
          <span class="col-sm-2">
            <%= f.submit 'Send invitation', {class: "btn btn-primary"} %>
          </span>
        </div>
      </div>
    <% end %>

  </div>
</div>