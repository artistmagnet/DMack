<div id="add-resume">
  <!--< %= form_for(@resume, html: {class: 'form-inline'}) do |f| %>-->

    <div class="container-fluid m-top-20">
      <div class="row">
        <div class="col-md-12">
          <div class="panel panel-default">
            <div class="panel-body">
              <div class="row">
                <div class="col-md-12">
                  <h4>
                    <span><%= @production.name %>'s Director</span>
                    <%= link_to @production do %>
                      <button class="btn btn-primary pull-right m-top-m6" type="button">Done</button>
                    <% end %>
                  </h4>
                </div>
              </div>

              <div class="row">
                <div class="col-md-12">
                  <% if @production.director_name %>
                    <%= @production.director_name %>
                  <% else %>
                    Not selected
                  <% end %>
                </div>
              </div>

              <br />
            <!--</div>-->
          <!--</div>-->
          <!--<div class="panel panel-default">-->
            <!--<div class="panel-body">-->
              <div class="row">
                <div class="col-md-6">
                  <%= form_tag(update_production_director_path, method: :put) do %>
                    <h5>
                      <span>Search an Artist Magnet member</span>
                    </h5>
                    <div class="form-group">
                      <div>
                        <%= collection_select :production, :director_id, Resume.directors.sort_by{ |resume| resume.name }, :id, :name, {prompt: 'Select director'}, {class: "form-control chosen-select"} %>
                      </div>
                    </div>
                    <%= button_tag 'Update', {class: "btn btn-primary"} %>
                  <% end %>
                </div>
                <div class="col-md-6">
                  <%= form_for [@production, @invitation] do |f| %>
                    <h5>
                      <span>or invite a Director to Artist Magnet</span>
                    </h5>
                    <div class="col-sm-12">
                      <div class="row">
                        <div class="form-group">
                          <div class="field">
                            <div class="row">
                              <div class="col-sm-3">
                                <%= f.text_field :first_name, {placeholder: "First name", class: "form-control"} %>
                              </div>
                              <div class="col-sm-3">
                                <%= f.text_field :last_name, {placeholder: "Last name", class: "form-control"} %>
                              </div>
                              <div class="col-sm-3">
                                <%= f.text_field :email, {placeholder: "Email", class: "form-control"} %>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>

                    <%= button_tag 'Send invitation', {class: "btn btn-primary"} %>
                  <% end %>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>

  <!--< % end %>-->
</div>

<h3><%= @production.name %>'s Director</h3>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>State</th>
      <th>Text</th>
      <th>Sender</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invitations.each do |invitation| %>
      <tr>
        <td><%= invitation.first_name %></td>
        <td><%= invitation.last_name %></td>
        <td><%= invitation.email %></td>
        <td><%= invitation.state %></td>
        <td><%= invitation.text %></td>
        <td><%= invitation.by_name %></td>
        <!--<td>< %= link_to 'Show', production_director_invitation_path(@production, invitation) %></td>-->
        <!--<td>< %= link_to 'Edit', edit_director_invitation_path(invitation) %></td>-->
        <!--<td>< %= link_to 'Destroy', invitation, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

