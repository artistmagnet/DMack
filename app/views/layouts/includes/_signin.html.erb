<%= form_for(resource, as: resource_name, url: session_path(resource_name),:html=>{:class=>"form-inline"}) do |f| %>
  <div class="row">
    <div class="form-group col-xs-8 col-lg-9">
      <div class="row">
        <div class="col-xs-12 col-md-6">
          <%= f.email_field :email, autofocus: true,:class=>"form-control only-bottom-border slategrey-border" ,:id=>"exampleInputName2" ,:placeholder=>"email" %>
        </div>
        <div class="col-xs-12 col-md-6">
          <%= f.password_field :password, autocomplete: "off",:class=>"form-control only-bottom-border slategrey-border" ,:id=>"exampleInputEmail2" ,:placeholder=>"password"%>
        </div>
        <% if devise_mapping.rememberable? -%>
          <div class="col-xs-12">
            <%= f.check_box :remember_me %> <%= f.label :remember_me %>
          </div>
        <% end -%>
      </div>
    </div>
    <div class="col-xs-4 col-lg-3">
      <div class="row">
        <div class="col-xs-12">
          <%= f.submit "Log in", id: 'login-btn', :class=>"btn slategrey black-shadow" %>
        </div>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
          <div class="col-xs-12">
            <%= link_to "forgot password?", new_password_path(resource_name), class: 'small-text' %>
          </div>
        <% end -%>
      </div>
    </div>
    
  </div>
  
  <div class="row">
    
  </div>
<%end%>