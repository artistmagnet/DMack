
<% remoteForm  ||= false %>
<% queryFormat ||= (remoteForm ? 'json' : '') %>
<% html_class  ||= '' %>

<div id="add-production" >

  <div class="panel panel-default" >

    <h3>
      <span>Production</span>
      <% if remoteForm %>
        <a class="pull-right" href="javascript:void(0)" onclick="$('.overlay-2').hide();$('.fade-2').hide()">
          <i class="fa fa-undo"></i>
        </a>
      <% end %>
    </h3>

    <div class="panel-body">
    <%= form_for(@production, remote: remoteForm, format: queryFormat, html: {class: html_class + ' form-horizontal'}) do |f| %>
      <div id="error_explanation" style="display: none">
        <ul>
          <% if @production.errors.any? %>
            <% @production.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          <% end %>
        </ul>
      </div>

      <div class="form-group">
        <div class="field">
          <%= f.label :name, {class: "col-sm-2 control-label"} %>
          <div class="col-sm-10">
            <%= f.text_field :name %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :company, {class: "col-sm-2 control-label"} %>
          <div class="col-sm-10">
            <%= f.collection_select :company_id, Company.all.order(:name), :id, :name, {include_blank: true}, {:class => 'form-control chosen-select'} %>
            <%= link_to "Add one", '#', {:class => 'extend-list'} %>
          </div>
        </div>
      </div>
      <%= f.fields_for :shows do |fs| %>
        <div class="form-group">
          <div class="field">
            <%= fs.label :venue, {class: "col-sm-2 control-label"} %>
            <div class="col-sm-10">
              <%= fs.collection_select :venue_id, Venue.all.order(:name), :id, :name, {include_blank: true}, {:class => 'form-control chosen-select'} %>
              <%= link_to "Add one", '#', {:class => 'extend-list'} %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="field">
            <%= fs.label "Opening", {class: "col-sm-2 control-label"} %>
            <div class="col-sm-10">
              <%= fs.date_select :date %>
            </div>
          </div>
        </div>
      <% end %>

      <div class="form-group">
        <div class="field">
          <%= f.label :description, {class: "col-sm-2 control-label"} %>
          <div class="col-sm-10">
            <%= f.text_area :description %>
          </div>
        </div>
      </div>
      <div class="actions form-group form-inline">
        <span class="col-sm-1 col-sm-offset-2">
          <%= f.button 'Done', {class: "btn btn-primary m-top-m6"} %>
        </span>
        <% if !remoteForm  %>
        <span class="col-sm-1">
          <%= link_to 'Cancel', :back, {class: "btn btn-default m-top-m6"} %>
        </span>
        <% end %>
      </div>
    <% end %>
    </div>

  </div>
</div>

