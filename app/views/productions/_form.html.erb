<%= form_for(@production) do |f| %>
  <% if @production.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@production.errors.count, "error") %> prohibited this production from being saved:</h2>

      <ul>
      <% @production.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :company %><br>
    <%= f.collection_select :company_id, Company.all, :id, :name %>
  </div>
  <%= f.fields_for :shows do |fs| %>
    <div class="field">
      <%= fs.label :venue %><br>
      <%= fs.collection_select :venue_id, Venue.all, :id, :name %>
    </div>
    <div class="field">
      <%= fs.label "Premiere date (you can add more dates later)" %><br>
      <%= fs.date_select :date %>
    </div>
    <!--< %= hidden_field_tag production_id,-->
  <% end %>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
