<p>
  <strong>Name:</strong>
  <%= @production.name %>
</p>
<p>
  <strong>Company:</strong>
  <%= link_to @production.company_name, @production.company %>
</p>

<p>
  <strong>Venue:</strong>
  <%= link_to @production.current_venue_name, @production.current_venue %>
</p>

<p>
  <strong>Description:</strong>
  <%= @production.description %>
</p>

<p>
  <strong>Dates:</strong> <%= link_to 'Add one', new_production_show_path(@production) %><br />
  <% @production.shows.order(:date).each do |show| %>
    <%= show.date %> <%= show.venue_name %> <br />
  <% end %>
</p>

<div style="background-color: #CCCCCC; border-radius: 4px; padding: 10px 20px">
  <h3>Cast & Crew</h3>

  <table>
    <tr>
      <% @production.roles.each do |role| %>
        <td style="border-radius: 4px; background-color: #eeeeee; padding: 5px">
          <p>
            <div>
              <img src="/images/fallback/performer-200.jpg" />
            </div>
            <strong><%= link_to role.user_name, role.resume %></strong> <br />
            <%= role.name %>
          </p>
        </td>
      <% end %>
    </tr>
  </table>
</div>



<%= link_to 'Edit', edit_production_path(@production) %> |
