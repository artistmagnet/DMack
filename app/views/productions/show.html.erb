            </div>
            <div class="s-12 l-4 rocket_block_container">
              <%if @production.photo && @production.photo.try(:image).present? %>
              <%=image_tag @production.photo.image(:medium), class: "rocket_bock_a"%>
            <%else%>
              <%=image_tag 'Production_md.jpg', class: "rocket_bock_a"%>
            <%end%>
            </div>
            
          </div>
        </div>
      </div>
    </section>
  </div>
</div>

<div class="box last_box">
  <!-- HEADER -->     
  <div class="line">
    <section>
      <h3>Cast & Crew</h3>
      <div class="line">
        <div class="line">
          <div class="margin">                               
            <center>
              <% roles = @production.roles.confirmed.to_a %>
              <% roles.each do |role| %>
                <% c = role.resume.contact_info unless role.resume.blank? %>
                <% unless c.blank? %>
                  <%= link_to resume_path(role.resume) do %>
                    <div class="s-12 l-3 space_a">
                      <%=image_tag 'blankUser.png', class: "img_crew"%>											
                      <p><%= c.nick_name %></p>
                      <p class="p_box_a"><%= role.name %></p>
                    </div>
                  <% end %>
                <% end %>
              <% end %>
            </center>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>
