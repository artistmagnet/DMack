<div class="box">
  <!-- HEADER -->     
  <div class="line">
    <section>
      <div class="line">
        <div class="line">
          <div class="margin">
            <div class="s-12 l-8">
              <div class="box_text_container">
                <h4><%= @production.name %></h4>
                <p>
                <% unless @production.current_venue_name.blank? %>
                  Performed at <%= link_to @production.current_venue_name, @production.current_venue %>
                  <br>
                <% end %>
                <% unless @production.company_name.blank? %>
                  by <%= link_to @production.company_name, @production.company %>
                  <br>
                <% end %>
                <%= "Opening #{@production.opening_date}" unless @production.opening_date.nil? %>
                </p>
                <p><%= @production.description unless @production.description.blank? %> </p> 
              </div>
              <%= link_to  production_artist_invitations_path @production do %>
                <button class="btn_auk" type="button">Add Artists</button>
              <% end %>
