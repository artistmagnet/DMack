 <div id="container">
   <a class="btn btn-default remove_nested_field remove_education pull-right" data-association="Custom" data-success="true" href="javascript:void(0)" title="Remove Section">X</a>

  <%=f.fields_for :resume_sections,@sections[3] do |c|%> 
    <%= c.text_field :section_name,:value=>@sections[3].section_name,:class=>"resume_section section_heading"%>
    <%= c.hidden_field :position,:class=>"resume_section section_heading"%>
    <%= c.hidden_field :section_id,:value=>4,:class=>"resume_section section_heading"%>
  <%end%> 
</div>                 
                  
  <table id="demo" class="customs draggable">
   <thead> 
    <%=render 'resumes/nested/custom_cols_remove', :section=>"customs"%>
  </thead>
  <tbody class="moveable render_education_table">
  <!-- <li class="sortable"> -->
    <!-- <div class="rtable_cols"></div> -->
    <%=render 'resumes/nested/custom_fields',:cust=>f%>
    <%=f.fields_for :customs,:wrapper => false do |cust|%>
      <%= render "resumes/nested/custom",:cust=>cust%>
    <%end%>   
     <tfoot>

    <tr> 
   
      <th colspan="8"><%= f.link_to_add "+", :customs ,:class=>"btn btn-default insert_in_table add_edu_row",:title=>"Add Row"%></th>
     </tr>
     </tfoot>
  </tbody>
    </table>             
   <script type="text/javascript">
     $(document).ready(function(){
      $('table#demo').dragtable({
        revert: true,               // smooth revert
        dragHandle: '.table-handle',
        cursor: 'move',
        dragaccept: '.drag-enable',
        excludeFooter: true
      });
     }); 

     </script>
