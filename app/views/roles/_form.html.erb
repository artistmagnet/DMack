<div id="add-role">

  <div class="panel panel-default" >

    <h3>
      <span>Add a new Credit</span>
      <a class="pull-right" href="javascript:void(0)" onclick="$('.overlay-1').hide();$('.fade-1').hide()">
        <i class="fa fa-undo"></i>
      </a>
    </h3>

    <div class="panel-body">
    <%= form_for([@resume, @role], remote: true, format: 'json', html: {class: 'form-horizontal'}) do |f| %>

        <div id="error_explanation" style="display: none">
          <ul>
            <% if @role.errors.any? %>
              <% @role.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            <% end %>
          </ul>
        </div>

      <div class="form-group">
        <div class="field">
          <%= f.label :name, {class: "col-sm-2 control-label"} %>
          <div class="col-sm-10">
            <%= f.text_field :name %>
          </div>
        </div>
      </div>

      <%= f.hidden_field :resume_id %>

      <div class="form-group">
        <div class="field">
          <%= f.label :production_id, {class: "col-sm-2 control-label"} %>
          <div class="col-sm-10">
            <%= f.collection_select :production_id, Production.all.order(:name), :id, :key_info  %>
            <%= link_to "Add one", '#', {:class => 'extend-list'} %>
          </div>
        </div>
      </div>


      <div class="actions form-group form-inline">
        <span class="col-sm-1 col-sm-offset-2">
          <%= f.submit 'Done', {class: "btn btn-primary"} %>
        </span>
      </div>
    <% end %>
    </div>

  </div>
</div>

<div id="add-role-production">
  <%= render 'productions/form', :remoteForm => true, :queryFormat => 'json', :html_class => 'production_form' %>
</div>

