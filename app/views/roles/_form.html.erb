<div id="add-role">
  <div class="panel panel-default" >

    <div class="panel-body">

      <div class="form-group">
        <h3 class="col-md-offset-2 col-md-10 m-bottom-20">
          <span>Credit</span>
          <a class="pull-right" href="<%= edit_resume_path(@resume) %>" >
          <!--<a class="pull-right" href="javascript:void(0)" onclick="$('.overlay-1').hide();$('.fade-1').hide();$('.role-form').trigger('reset');$('#role_production_id').trigger('chosen:updated');$('#role_director_id').trigger('chosen:updated');">-->
            <i class="fa fa-undo"></i>
          </a>
        </h3>
      </div>

    <%= form_for([@resume, @role], remote: true, format: 'json', html: {class: 'role-form form-horizontal'}) do |f| %>
      <%= render 'layouts/includes/error_explanation', entity: @role, offset: 2, span: 10 %>

      <div class="form-group">
        <div class="field">
          <%= f.label :name, {class: "col-sm-2 control-label"} %>
          <div class="col-sm-10">
            <%= f.text_field :name, {class: 'form-control', placeholder: 'Enter Role'} %>
          </div>
        </div>
      </div>

        <%= f.hidden_field :resume_id %>
        <%= f.hidden_field :dirname %>

        <div class="form-group">
          <div class="field">
            <%= f.label :production_id, {class: "col-sm-2 control-label"} %>
            <div class="col-sm-10">
              <%= f.collection_select :production_id, Production.all.order(:name), :id, :key_info, {prompt: 'Select production'},
                                      {class: "form-control chosen-select m-left-m8",
                                       data: {
                                           add_as_new_label:  'To add it as a new Production, click here' #,
                                           # add_as_text_label: 'To leave as text only, click here.'
                                       }
                                      }  %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="field">
            <%= f.label :director_id, {class: "col-sm-2 control-label"} %>
            <div class="col-sm-10">
              <%= f.collection_select :director_id, Resume.directors.order(:user_id), :id, :name, {prompt: 'Select director'},
                                      {class: "form-control chosen-select m-left-m8",
                                       disabled: f.object.production.nil?,
                                       data: {
                                           add_as_new_label:  'To invite a new Director to Artist Magnet, click here',
                                           add_as_text_label: 'To leave as text only, click here.'
                                       }
                                      }  %>
            </div>
          </div>
        </div>


      <div class="actions form-group">
        <span class="col-sm-2"></span>
        <span class="col-sm-2">
          <%= f.submit 'Done', {class: "btn btn-primary"} %>
        </span>
      </div>
    <% end %>
    </div>

  </div>
</div>


