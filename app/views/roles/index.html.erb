<h1>Listing roles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Resume</th>
      <th>Production</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.name %></td>
        <td><%= role.resume_id %></td>
        <td><%= role.production_name %></td>
        <td><%= link_to 'Show', [role.resume, role] %></td>
        <td><%= link_to 'Edit', edit_resume_role_path(role.resume, role) %></td>
        <td><%= link_to 'Destroy', [role.resume, role], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

