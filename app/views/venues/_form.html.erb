<%= form_for(@venue, remote: true, format: :json, html: {class: :venue_form}) do |f| %>
  <div id="error_explanation" style="display: none">
    <ul>
      <% if @venue.errors.any? %>
        <% @venue.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      <% end %>
    </ul>
  </div>

  <h3>
    <span>New Venue</span>
    <a class="pull-right" href="javascript:void(0)" onclick="$('.overlay-2').hide();$('.fade-2').hide()">
      <i class="fa fa-undo"></i>
    </a>
  </h3>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :address1 %><br>
    <%= f.text_field :address1 %>
  </div>
  <div class="field">
    <%= f.label :address2 %><br>
    <%= f.text_field :address2 %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :zipcode %><br>
    <%= f.text_field :zipcode %>
  </div>
  <div class="field">
    <%= f.label :state %><br>
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :country %><br>
    <%= f.text_field :country %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :addr_fb %><br>
    <%= f.text_field :addr_fb %>
  </div>
  <div class="field">
    <%= f.label :addr_tw %><br>
    <%= f.text_field :addr_tw %>
  </div>
  <div class="field">
    <%= f.label :addr_ins %><br>
    <%= f.text_field :addr_ins %>
  </div>
  <div class="field">
    <%= f.label :addr_lin %><br>
    <%= f.text_field :addr_lin %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
